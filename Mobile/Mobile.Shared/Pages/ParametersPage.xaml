<views:MvxContentPage
    x:TypeArguments="viewModels:ParametersViewModel"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:mvx="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
    xmlns:viewModels="clr-namespace:Services.ViewModels;assembly=Services"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:Mobile.Shared.Helpers"
    xmlns:controls="clr-namespace:Mobile.Shared.Pages.Controls"
    xmlns:navigationControls="clr-namespace:Mobile.Shared.Pages.Controls.Navigation"
    mvx:Bi.nd="Title Translate[Parameters]"
    x:Class="Mobile.Shared.Pages.ParametersPage">

    <!--Styles-->
    <ContentPage.Resources>
        <!--Table header-->
        <Style x:Key="tableHeader" TargetType="Frame">
            <Setter Property="Padding" Value="10, 5"/>
            <Setter Property="HasShadow" Value="False"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="BackgroundColor" Value="{StaticResource ColorSecondary}"/>
        </Style>
        <!--Table cell-->
        <Style x:Key="tableCell" TargetType="Frame">
            <Setter Property="Padding" Value="10, 5"/>
            <Setter Property="HasShadow" Value="False"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="BackgroundColor" Value="{StaticResource ColorAccent}"/>
        </Style>
        <!--Table header text-->
        <Style x:Key="tableHeaderText" TargetType="Label">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="VerticalTextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="Small"/>
            <Setter Property="LineBreakMode" Value="WordWrap"/>
        </Style>
        <!--Table cell text-->
        <Style x:Key="tableCellText" TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource ColorDark}"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="VerticalTextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontSize" Value="Small"/>
            <Setter Property="LineBreakMode" Value="WordWrap"/>
        </Style>
    </ContentPage.Resources>

    <!--Content-->
    <ContentPage.Content>
        <ContentView ControlTemplate="{StaticResource defaultTemplate}">
            <!--Content-->
            <StackLayout
                Spacing="10">
                <!--Label-->
                <controls:Label 
                    Icon="{x:Static helpers:Icons.bar_chart_2}" 
                    mvx:Bi.nd="Text Plant.Name"/>

                <!--Description-->
                <StackLayout Spacing="0">
                    <Label
                        mvx:Bi.nd="Text Translate[Info]"
                        FontSize="Small" 
                        TextColor="{StaticResource ColorDark}"/>
                    <Label 
                        FontSize="Small"
                        mvx:Bi.nd="Text Plant.Info"/>
                </StackLayout>

                <!--Table-->
                <Grid 
                    ColumnSpacing="2" 
                    RowSpacing="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="35*"/>
                        <ColumnDefinition Width="30*"/>
                    </Grid.ColumnDefinitions>
                    <!--Header-->
                    <Frame Style="{StaticResource tableHeader}">
                        <Label 
                            mvx:Bi.nd="Text Translate[Parameter]"
                            Style="{StaticResource tableHeaderText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="0" 
                        Grid.Column="1"
                        Style="{StaticResource tableHeader}">
                        <Label 
                            mvx:Bi.nd="Text Translate[MeasurementUnit]"
                            Style="{StaticResource tableHeaderText}" />
                    </Frame>
                    <Frame 
                        Grid.Row="0" 
                        Grid.Column="2" 
                        Style="{StaticResource tableHeader}">
                        <Label 
                            mvx:Bi.nd="Text Translate[Value]"
                            Style="{StaticResource tableHeaderText}"/>
                    </Frame>
                    <!--Air Temperature-->
                    <Frame 
                        Grid.Row="1" 
                        Grid.Column="0" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            mvx:Bi.nd="Text Translate[AirTemperature]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="1"
                        Grid.Column="1" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            Text="°C" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="1"
                        Grid.Column="2" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            mvx:Bi.nd="Text Parameters.AirTemperature" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <!--Soil humidity-->
                    <Frame 
                        Grid.Row="2"
                        Grid.Column="0" 
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[SoilHumidity]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="2" 
                        Grid.Column="1" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            Text="%" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="2" 
                        Grid.Column="2" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            mvx:Bi.nd="Text Parameters.SoilHumidity" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <!--Luminosity-->
                    <Frame 
                        Grid.Row="3" 
                        Grid.Column="0" 
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[Luminosity]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="3" 
                        Grid.Column="1" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            Text="%" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="3" 
                        Grid.Column="2" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            mvx:Bi.nd="Text Parameters.Luminosity" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <!--Seeding date-->
                    <Frame 
                        Grid.Row="4" 
                        Grid.Column="0" 
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[SeedingDate]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="4" 
                        Grid.Column="1" 
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[DateTime]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="4" 
                        Grid.Column="2" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            mvx:Bi.nd="Text SeedingDate" 
                            Text="{Binding SowingDate}" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <!--Plants distance-->
                    <Frame 
                        Grid.Row="5" 
                        Grid.Column="0" 
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[PlantsDistance]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="5" 
                        Grid.Column="1" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            Text="cm" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="5"
                        Grid.Column="2"
                        Style="{StaticResource tableCell}">
                        <Label 
                            Text="0" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <!--Row distance-->
                    <Frame 
                        Grid.Row="6"
                        Grid.Column="0"
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[RowDistance]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="6"
                        Grid.Column="1" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            Text="cm" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="6"
                        Grid.Column="2" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            mvx:Bi.nd="Text Plant.RowDistance"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <!--Seed depth-->
                    <Frame 
                        Grid.Row="7" 
                        Grid.Column="0" 
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[SeedDepth]" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="7" 
                        Grid.Column="1" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            Text="cm" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="7" 
                        Grid.Column="2" 
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Plant.SeedDepth" 
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <!--Remaining time-->
                    <Frame 
                        Grid.Row="8" 
                        Grid.Column="0" 
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[RemainingTime]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="8" 
                        Grid.Column="1"
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[Days]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="8" 
                        Grid.Column="2" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            mvx:Bi.nd="Text RemainingTime"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <!--Seeded plants-->
                    <Frame 
                        Grid.Row="9" 
                        Grid.Column="0" 
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[SeededPlants]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="9" 
                        Grid.Column="1"
                        Style="{StaticResource tableCell}">
                        <Label
                            mvx:Bi.nd="Text Translate[Count]"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                    <Frame 
                        Grid.Row="9" 
                        Grid.Column="2" 
                        Style="{StaticResource tableCell}">
                        <Label 
                            mvx:Bi.nd="Text Parameters.SeededPlants"
                            Style="{StaticResource tableCellText}"/>
                    </Frame>
                </Grid>

                <!--Update link-->
                <navigationControls:LinkButton
                    mvx:Bi.nd="Text Translate[UpdateParameters]"
                    Command="{Binding UpdateParametersCommand}"/>

                <!--Aditional info-->
                <StackLayout Spacing="5">
                    <controls:Label 
                        Icon="{x:Static helpers:Icons.upload_cloud}"
                        mvx:Bi.nd="Text Translate[AdditionalInfo]"/>
                    <!--Farm Bot Ip-->
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                    mvx:Bi.nd="Text Translate[FarmBotIp]"/>
                                <Span 
                                    Text=" - "/>
                                <Span 
                                    mvx:Bi.nd="Text FarmBot.IpAddress"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <!--IpCamera address-->
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                    mvx:Bi.nd="Text Translate[IpCameraAddress]"/>
                                <Span 
                                    Text=" - "/>
                                <Span 
                                    mvx:Bi.nd="Text FarmBot.IpCameraAddress"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <!--Username-->
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                    mvx:Bi.nd="Text Translate[Username]"/>
                                <Span 
                                    Text=" - "/>
                                <Span 
                                    Text="gheorghe.vasiliu"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>

            </StackLayout>
        </ContentView>
    </ContentPage.Content>
</views:MvxContentPage>